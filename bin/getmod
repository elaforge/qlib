#!/usr/bin/env python

import sys, os

def main():
	mod = sys.argv[1]
	try:
		m = __import__(mod, locals(), globals(), ('ugly hack',))
	except ImportError:
		return 1
	fn = m.__file__
	fd = os.path.dirname(fn)
	if (fn.endswith('.pyc') or fn.endswith('.pyo')
			and os.path.isfile(os.path.join(fd, fn[:-1]))):
		fn = fn[:-1] # found the source
	print fn
	return 0

if __name__ == '__main__':
	sys.exit(main())
