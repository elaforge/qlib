#!/bin/sh

db=${1:-mldb_repl}

red=rgbi:.9/.7/.6
blue=rgbi:.7/.7/.9
green=rgbi:.7/.9/.6

case $db in
  mldb_repl)
    color=$green
    args="-umdb_ro -pmdb_ro -hmdbsqlro.prodz.google.com -P9200 -A mdb"
    ;;
  mldb)
    color=$red
    args="-h127.0.0.1 -P9201 -umldb_rw -p mdb"
    ;;
  local)
    color=$blue
    args="-uroot -ptest mdb"
    ;;
  *)
    echo unknown db: $db
    exit 1
esac

xterm -bg $color -title "mysql $db" -geometry 248x48 -e "mysql $args" &
