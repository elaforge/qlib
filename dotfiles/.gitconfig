# This is Git's per-user configuration file.
[core]
user = Evan Laforge
email = qdunkan@gmail.com
# pager = cat
pager = less --quit-if-one-screen --no-init
whitespace = trailing-space,tab-in-indent

[user]
name = Evan Laforge
email = qdunkan@gmail.com

[branch]
# I think this means when creating a local branch from a remote one,
# automatically add the upstream info
# autoSetupMerge = always

[push]
default = simple

[alias]
amend = commit --amend
a = add
s = status --short
b = branch -v
co = checkout
c = commit
d = diff
ds = diff --stat
wip = commit -am wip
unrec = reset HEAD^
oblit = reset --keep HEAD^

# Show either a a single patch, or last patch to a file.
lp = log -p -1

# For ghc.
pullall = "!f(){ git pull --ff-only \"$@\" && git submodule update --init --recursive; }; f"

[url "git://github.com/ghc/packages-"]
insteadOf = git://github.com/ghc/packages/
