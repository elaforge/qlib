set editing-mode vi
set horizontal-scroll-mode On
set bell-style none

# make chinese input work in iterm
set meta-flag on
set input-meta on
set output-meta on
set convert-meta off

$if python
    tab: "    "
$endif

$if rbc
    tab: "    "
$endif

$if rdln
    set keymap vi-command
    C-u: dump-functions
    set keymap vi-insert
    "\'": smart-quote
$endif
